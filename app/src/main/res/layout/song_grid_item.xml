<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp">

    <ImageView
        android:id="@+id/song_grid_item_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_album_blue_48dp"/>

    <TextView
        android:id="@+id/song_grid_item_song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_grid_item_image"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"/>

    <TextView
        android:id="@+id/song_grid_item_artist_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_grid_item_song_name"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"/>

</RelativeLayout>